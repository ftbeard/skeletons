NAME =			a.out

SOURCE_DIR = 	source

SOURCE_FILES =	hello.go

# **************************************************************************** #

SOURCES =		$(addprefix $(SOURCE_DIR)/, $(SOURCE_FILES))

# **************************************************************************** #
all:
	go build -o $(NAME) $(SOURCES)

clean:
	rm $(NAME)

re: clean all
